# General

auto-reload yes                                 # Refetch every feed at startup. 
reload-time  30                                 # Refetch every 30 minutes.
max-items 100                                   # Maximun amout of items per feed.
datetime-format "%D, %R"                        # Date formatting.
show-keymap-hint no                             # No hints.
download-retries 4                              # How many retries of fetching until drop.

# VIM bindings

unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

# MPV

browser "/usr/local/bin/w3m %u"
macro m set browser "torsocks /usr/local/bin/mpv %u"; open-in-browser ; set browser "/usr/local/bin/w3m %u"
macro cm set browser "/usr/local/bin/mpv %u"; open-in-browser ; set browser "/usr/local/bin/w3m %u"
macro q set browser "open -a 'Qutebrowser' %u"; open-in-browser ; set browser "/usr/local/bin/w3m %u"

# Theme 

color background         default   default
color listnormal         default   default
color listfocus          black     white    
color listnormal_unread  default   default
color listfocus_unread   black     white   
color info               default   black    
color article            default   default

# Highlighting

highlight article "^(Title):.*$" blue default
highlight article "https?://[^ ]+" red default
highlight article "\\[image\\ [0-9]+\\]" green default
