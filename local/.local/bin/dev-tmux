# Description:
# Default tmux window setup for daily development.

cd ~ && tmux new-session -s dev -n files \; \
            send-keys 'cd '$1 C-m \; \
            new-window -n server \; \
            send-keys 'cd '$1 C-m \; \
            split-window -v -p 50 \; \
            send-keys 'cd '$1 C-m \; \
            new-window -n information \; \
            send-keys 'mutt' C-m \; \
