# Description:
# Statusbar for dwm.

# Set the delimiter character.
delim="|"

status() {
    # Battery status.
    echo "BAT0 $(cat /sys/class/power_supply/BAT0/capacity)%"

    echo "$delim"

    # Date and time.
    date '+%a %d %b %Y %I:%M:%S %p %Z'
}

xsetroot -name "$(status | tr '\n' ' ')"
