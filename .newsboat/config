# general settings
auto-reload yes
reload-time  30

# unbind keys
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K

# bind keys - vim style
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

# content player
browser "/usr/local/bin/w3m %u"
macro m set browser "/usr/local/bin/mpv %u"; open-in-browser ; set browser "/usr/local/bin/w3m %u"
# Only works on Linux
# macro f set browser "/usr/local/bin/firefox %u"; open-in-browser ; set browser "/usr/local/bin/w3m %u"
macro f set browser "open -a Firefox %u"; open-in-browser ; set browser "/usr/local/bin/w3m %u"

# theme 
color background         default   default
color listnormal         default   default
color listfocus          black     white    
color listnormal_unread  default   default
color listfocus_unread   black     white   
color info               default   black    
color article            default   default

# highlights
highlight article "^(Title):.*$" blue default
highlight article "https?://[^ ]+" red default
highlight article "\\[image\\ [0-9]+\\]" green default
