# General

set selection-clipboard clipboard           # Enable cc by selection.
set statusbar-h-padding 0                   # Horizontal padding.            
set statusbar-v-padding 0                   # Vertical padding.
set page-padding 1                          # Page padding.
set sandbox none                            # Make hyperlinks work.

# Bindings

map u scroll half-up                        
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map i recolor
map p print
