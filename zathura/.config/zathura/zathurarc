# General

# Enable cc by selection.
set selection-clipboard clipboard 
# Horizontal padding. 
set statusbar-h-padding 0 
# Vertical padding.
set statusbar-v-padding 0 
# Page padding.
set page-padding 1 
# Make hyperlinks work.
set sandbox none          
# Default browser.
# set uri_command "lynx %s"
# Printers
# set list_printer_command "lpstat -p"

# Bindings

map u scroll half-up                        
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map i recolor
map p print
